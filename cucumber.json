{
  "default": {
    "paths":[
      "src/tests/features"
    ],
    "dry-run": false,
    "formatOptions": {
      "colorsEnabled": true,
      "snippetInterface": "async-await"
    },
    "require": [
      "src/tests/steps/**/*.ts",
      "src/tests/support/**/*.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "format": [
      "progress-bar",
      "json:reports/cucumber-report.json",
      "html:reports/cucumber-raw.html",
      "pretty:reports/cucumber-pretty.txt"
    ]
  }
}
